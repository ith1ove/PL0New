PROGRAM EX09_ERROR;
CONST pi = 3;
VAR x, y;
BEGIN
    // 正确的用法
    x := 10;
    x += 5;
    WRITE(x);
    
    // 错误测试：对常量使用复合赋值运算符
    // pi += 1;    // 这行会导致编译错误：对非变量赋值
    
    // 错误测试：未声明的变量
    // z += 5;     // 这行会导致编译错误：未定义的标识符
    
    // 正确的复杂表达式
    y := 20;
