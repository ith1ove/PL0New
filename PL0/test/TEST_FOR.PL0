program testfor;
var i, sum;
begin
    sum := 0;
    
    // 测试 FOR TO 语句
    for i := 1 to 5 do
        sum := sum + i;
    
    write(sum);  // 应该输出 15 (1+2+3+4+5)
    
    sum := 0;
    
    // 测试 FOR DOWNTO 语句
    for i := 5 downto 1 do
        sum := sum + i;
    
    write(sum)  // 应该输出 15 (5+4+3+2+1)
end.
