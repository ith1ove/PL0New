PROGRAM EX03;
// 测试新增运算符：+=，-=，++，--
// 这个测试程序验证编译器能否正确识别新增的复合运算符

VAR A, B, C, D;

BEGIN
    // 初始化变量
    A := 10;
    B := 5;
    C := 3;
    D := 2;
    
    // 测试 += 运算符（占位符实现）
    +=;
    
    // 测试 -= 运算符（占位符实现）
    -=;
    
    // 测试 ++ 运算符（占位符实现）
    ++;
    
    // 测试 -- 运算符（占位符实现）
    --;
    
    // 输出一个测试值
    WRITE(A)
END.
