{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PL0 Application",
      "type": "cppdbg", 
      "request": "launch",
      "program": "${workspaceFolder}/release/PL0.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/test",
      "environment": [
        {
          "name": "PATH",
          "value": "H:/Qt/6.9.1/mingw_64/bin;H:/Qt/Tools/mingw1310_64/bin;${env:PATH}"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "H:/Qt/Tools/mingw1310_64/bin/gdb.exe",
      "preLaunchTask": "Make project",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
